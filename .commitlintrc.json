{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "monorepo",
        "config",
        "types",
        "sdk",
        "logger",
        "schemas",
        "openapi",
        "ci",
        "deps"
      ]
    ]
  }
}




